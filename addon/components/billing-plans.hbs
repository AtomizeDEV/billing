<ContentPanel @title="Billing Plans" @open={{true}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-800">
    {{#if this.isStripeGateway}}
        <InputGroup @name="Stripe Product ID" @value={{this.stripeProductId}} @helpText="The product ID to use from your Stripe dashboard." />
    {{/if}}
</ContentPanel>

<div class="mt-3 flex items-center justify-end">
    <Button @type="primary" @size="lg" @icon="save" @text="Save Changes" @onClick={{this.saveSettings}} @disabled={{this.isLoading}} @isLoading={{this.isLoading}} />
</div>